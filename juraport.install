/**
 * Helper function to prepare a simple term-object ready to be saved in the
 * system with taxonomy_term_save().
 */
function _juraport_prepare_term_object($vid, $term_name) {
	$term = new stdClass();
	$term->vid = $vid;
	$term->name = $term_name;
	return $term;
}

